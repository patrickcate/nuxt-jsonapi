{
  "name": "nuxt-jsonapi",
  "version": "1.0.0",
  "description": "Easy JSON:API client integration for Nuxt.js",
  "keywords": [
    "nuxt",
    "module",
    "nuxt-module",
    "vue",
    "json",
    "api",
    "json:api"
  ],
  "repository": "patrickcate/nuxt-jsonapi",
  "license": "MIT",
  "contributors": [
    {
      "name": "Patrick Cate",
      "url": "https://github.com/patrickcate"
    }
  ],
  "files": [
    "lib"
  ],
  "main": "lib/module.js",
  "scripts": {
    "dev": "nuxt example",
    "lint": "eslint --ext .js,.vue .",
    "lint:fix": "yarn lint --fix",
    "commit": "commit",
    "release": "yarn test && standard-version && git push --follow-tags origin main && npm publish",
    "test:api-server": "node example/server.js",
    "test:unit": "yarn jest",
    "test": "npm-run-all lint --parallel test:* -r",
    "prepare": "husky install"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "kitsu": "^10.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/prompt-cli": "^13.2.1",
    "@nuxtjs/eslint-config": "^7.0.0",
    "@nuxtjs/module-test-utils": "^1.6.3",
    "babel-eslint": "10.1.0",
    "babel-jest": "^27.2.2",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "fake-json-api-server": "^1.7.0",
    "husky": "^7.0.4",
    "jest": "^27.2.2",
    "npm-run-all": "^4.1.5",
    "nuxt": "^2.15.8",
    "prettier": "^2.7.1",
    "standard-version": "^9.3.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
